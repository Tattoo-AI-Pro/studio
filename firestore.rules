
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for readable and maintainable rules.
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Rules for the 'users' collection.
    // This collection stores user profile data. Access is strictly limited
    // to the user who owns the document.
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      
      // Users cannot list other users or delete their own profile document.
      allow list: if false;
      allow delete: if false;

      // Note: Subcollections under /users/{userId} that were part of a previous
      // data model are now deprecated in favor of the top-level /series collection.
      // The rules below ensure backward compatibility if needed but are not
      // actively used by the new structure.
      match /aiBooks/{aiBookId} {
        allow read, write: if isOwner(userId);
        match /modules/{moduleId} {
          allow read, write: if isOwner(userId);
          match /images/{imageId} {
            allow read, write: if isOwner(userId);
          }
        }
      }
    }

    // Rules for the 'series' collection.
    // This is the primary collection for tattoo series (AI-Books).
    match /series/{serieId} {
      // Allow public read for landing pages.
      allow get: if true;
      
      // Allow listing under two conditions:
      // 1. For signed-in users querying their own drafts/published series.
      // 2. For anyone (signed-in or not) querying ONLY for 'publicada' series.
      allow list: if (isSignedIn() && request.query.where.get("autor_id", [""])[2] == request.auth.uid) || 
                     (request.query.where.get("status", [""])[2] == "publicada");
      
      // Any signed-in user can create a new series.
      // Ownership is established by the `autor_id` field in the document.
      allow create: if isSignedIn();
      
      // Only the author of the series can update or delete it.
      allow update, delete: if isSignedIn() && resource.data.autor_id == request.auth.uid;

      // Rules for the 'modulos' subcollection within a series.
      match /modulos/{moduloId} {
        // Anyone can read a module's details.
        allow get: if true;
        allow list: if true;

        // Only the author of the parent series can create, update, or delete modules.
        // It checks the 'autor_id' of the parent series document.
        allow create, update, delete: if isSignedIn() && get(/databases/$(database)/documents/series/$(serieId)).data.autor_id == request.auth.uid;

        // Rules for the 'tatuagens' subcollection within a module.
        match /tatuagens/{tatuagemId} {
          // Anyone can read a tattoo's details.
          allow get: if true;
          allow list: if true;

          // Only the author of the parent series can create, update, or delete tattoos.
          allow create, update, delete: if isSignedIn() && get(/databases/$(database)/documents/series/$(serieId)).data.autor_id == request.auth.uid;
        }
      }
    }
  }
}
