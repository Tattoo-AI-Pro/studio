
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------------------------------------------------------------
    // Helper Functions
    // ------------------------------------------------------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(resource) {
      return request.auth.uid == resource.data.autor_id;
    }
    
    function isRequestingUser(userId) {
      return request.auth.uid == userId;
    }

    function requestAssignsOwner() {
      return request.resource.data.autor_id == request.auth.uid;
    }

    function getSerie(serieId) {
      return get(/databases/$(database)/documents/series/$(serieId));
    }

    function isSerieOwner(serieId) {
      return isOwner(getSerie(serieId));
    }

    // ------------------------------------------------------------------------
    // Collection Rules
    // ------------------------------------------------------------------------

    match /users/{userId} {
      allow get: if true;
      allow create, update: if isRequestingUser(userId);
      allow delete: if false; 
    }

    match /series/{serieId} {
      allow get: if true;
      allow list: if isSignedIn();
      allow create: if isSignedIn() && requestAssignsOwner();
      allow update, delete: if isSignedIn() && isOwner(resource);

      match /modulos/{moduloId} {
        allow read: if true;
        allow create, update, delete: if isSignedIn() && isSerieOwner(serieId);

        match /tatuagens/{tatuagemId} {
          allow read: if true;
          allow create, update, delete: if isSignedIn() && isSerieOwner(serieId);

          match /likes/{userId} {
            allow read: if true;
            allow create: if isSignedIn() && isRequestingUser(userId);
            allow delete: if isSignedIn() && isRequestingUser(userId);
            allow update: if false;
          }

          match /comentarios/{commentId} {
            allow read: if true;
            allow create: if isSignedIn() && request.resource.data.user_id == request.auth.uid;
            allow update: if isSignedIn() && isOwner(resource);
            allow delete: if isSignedIn() && isOwner(resource);
          }
        }
      }
    }
  }
}
